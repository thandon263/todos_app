
<div class="row clearfix">
<% if todo_item.completed? %>
<div class="todo_item">
  <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
</div>
  <div class="complete">
    <%= link_to "Mark as Complete", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
  </div>
  <div class="trash">
    <%= link_to "delete", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Do you want to continue" } %>
  </div>
<% else %>
<div class="todo_item">
  <p><%= todo_item.content %></p>
</div>
<div class="complete">
  <%= link_to "Mark as Complete", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
</div>
<div class="trash">
  <%= link_to "delete", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Do you want to continue" } %>
</div>
<% end %>
</div>
